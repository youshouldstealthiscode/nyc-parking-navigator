# NYC Parking Navigator - Environment Configuration
# Copy this file to .env and update with your values

# API Configuration
API_TITLE="NYC Parking Navigator API"
API_VERSION="1.0.0"
API_PREFIX="/api/v1"
DEBUG=false

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost/nyc_parking"
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# External APIs
OPENCURB_BASE_URL="https://api.opencurb.nyc/v1"
OPENCURB_TIMEOUT=30
NYC_OPENDATA_TIMEOUT=60

# Caching (optional - leave empty for memory cache)
REDIS_URL=""
CACHE_TTL=300

# Security
API_KEY_HEADER="X-API-Key"
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS
CORS_ORIGINS='["*"]'
CORS_CREDENTIALS=true
CORS_METHODS='["*"]'
CORS_HEADERS='["*"]'

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHE_HEADERS=true